@model IEnumerable<TurismoCR.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h2>Carrito</h2>
    <div class="container"style="width:60%;margin:2%">
        @using (Html.BeginForm(FormMethod.Post))
        {
            @if (Model != null)
            {
                <table class="table table-striped">
                    <tr>
                        <th> Nombre </th>
                        <th> Descripcion </th>
                        <th> Tarifa </th> 
                        <th> Cantidad </th>
                        <th> Subtotal </th>
                    </tr>
                    <tbody>
                        @foreach (var i in Model)
                        {
                                <tr>}
                                    <td>@i.Category</td>
                                    <td>@i.Description</td>
                                    <td>@i.Price</td>
                                    <td>@i.Province</td>
                                    <td>@i.Canton</td>
                                    <td>@i.District</td>
                                    <td><input type="submit" value="Eliminar" name="Edit" formaction="@Url.Action("DeleteService", i)" formmethod="post" class="btn btn-default" /></td>
                               </tr>
                        }
                    </tbody>
               </table>
            }
        }
    </div>

