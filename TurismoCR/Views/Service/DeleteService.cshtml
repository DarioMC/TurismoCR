@model TurismoCR.Models.Service;

@{
    ViewData["Title"] = "Borrar paquete turístico";
}

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Service" asp-action="DeleteServicePost">
    <h4>Ingrese el identificador del servicio </h4>
    <hr/>
    @* Service ID *@
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="serviceID">Identificador</label>
        <div class="col-sm-3">
            <input class="form-control" id="serviceID" type="text" name="serviceID"/>
        </div>
    </div>
    @* Add Btn *@
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Validar" class="btn btn-warning" />
        </div>
    </div>
</form>