@using TurismoCR.Models;
@{
    ViewData["Title"] = "Reseñas Amigos";
    List<Reseña> listaReseña = ViewBag.reseniasAmigos as List<Reseña>;

}
<h2>@ViewData["Title"]</h2>

<table id="t02">
    <thead>
        <tr>
            <th>Orden</th>
            <th>Fecha</th>
            <th>Usuario</th>
            <th>Calificacion</th>
            <th>Comentario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Reseña reseña in listaReseña)
        {
            <tr>
                <td>@reseña.IdServicio</td>
                <td>@reseña.Fecha</td>
                <td>@reseña.Usuario</td>
                <td>@reseña.Calificacion</td>
                <td>@reseña.Comentario</td>
            </tr>
        }
    </tbody>
</table>

<style>
    table#t02 {
        width: 100%;
        background-color: #f1f1c1;
    }

        table#t02 tr:nth-child(even) {
            background-color: #eee;
        }

        table#t02 tr:nth-child(odd) {
            background-color: #fff;
        }

        table#t02 th {
            color: white;
            background-color: #50896d;
        }

    table, th, td {
        border: 1px solid black;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
    }
</style>