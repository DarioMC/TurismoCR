@using TurismoCR.Models;
@{
    ViewData["Title"] = "Index";
    List<Orden> listaOrdenes = ViewBag.Ordenes as List<Orden>;

}

<h2>Mis Órdenes</h2>

<table id="t02">
    <thead>
        <tr>
            <th>IDCarrito</th>
            <th>Fecha</th>
            <th>Usuario</th>
            <th>Tarifa</th>
            <th>Categoria</th>
            <th>Descripcion</th>
            <th>Reseñas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Orden orden in listaOrdenes) {
                <tr>
                    <td>@orden.IdCarrito</td>
                    <td>@orden.Fecha</td>
                    <td>@orden.Usuario</td>
                    <td>@orden.Tarifa</td>
                    <td>@orden.Categoria</td>
                    <td>@orden.Descripción</td>
                    <td>
                        <a href="@Url.Action("InsertarReseña", "Reseña", new { idOrden = orden.IdOrden })">Agregar Reseña</a>
                    </td>
                </tr>
            }
    </tbody>
</table>

<style>
    table#t02 {
        width: 100%;
        background-color: #f1f1c1;
    }

        table#t02 tr:nth-child(even) {
            background-color: #eee;
        }

        table#t02 tr:nth-child(odd) {
            background-color: #fff;
        }

        table#t02 th {
            color: white;
            background-color: #50896d;
        }

    table, th, td {
        border: 1px solid black;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
    }
</style>

